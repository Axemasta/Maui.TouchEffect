<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.TouchEffect.Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Maui.TouchEffect.Sample.Controls"
    xmlns:pages="clr-namespace:Maui.TouchEffect.Sample.Pages"
    Title="Maui.TouchEffect.Sample"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Touch Effect"
        ContentTemplate="{DataTemplate pages:TouchEffectPage}"
        Route="TouchEffectPage" />

    <ShellContent
        Title="Collections"
        ContentTemplate="{DataTemplate pages:CollectionPage}"
        Route="CollectionPage" />

    <ShellContent
        Title="Images"
        ContentTemplate="{DataTemplate pages:ImagePage}"
        Route="ImagePage" />

    <Shell.FlyoutFooter>
        <Grid Padding="20">
            <controls:ThemeSwitchButton HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
